<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:bottom="120dp">
        <shape android:shape="rectangle" >


            <gradient
                android:type="linear"
                android:centerX="80%"
                android:startColor="#FFA13BDB"
                android:centerColor="#FF008080"
                android:endColor="#FF008080"
                android:angle="270"/>
        </shape>
    </item>
    <item android:top="350dp" >
        <shape android:shape="rectangle" >
            <corners
                android:bottomLeftRadius="8dip"
                android:bottomRightRadius="8dip" />

            <gradient
                android:startColor="#F5Fafa"
                android:endColor="#F5Fafa"
                android:angle="270" />
            <size android:height="30dp" />
        </shape>
    </item>
</layer-list>
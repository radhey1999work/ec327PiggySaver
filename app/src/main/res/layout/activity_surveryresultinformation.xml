<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pig"
    tools:context=".surveryresultinformation">

    <com.example.ec327.TypeWriter
        android:id="@+id/textsurveryresultinformation"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_marginTop="27dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="22.5sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editsavings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.ec327.TypeWriter
        android:id="@+id/oinkoinktext"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="23dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24.5sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/oinkoink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/donotknowinformationsurveyresult" />

    <EditText
        android:id="@+id/editsavings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="340dp"
        android:ems="10"
        android:hint="Savings"
        android:inputType="numberDecimal"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textsurveryresultinformation" />

    <Button
        android:id="@+id/donotknowinformationsurveyresult"
        android:layout_width="300dp"
        android:layout_height="45dp"

        android:layout_marginStart="46dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="281dp"
        android:background="@drawable/bgbtngreen"
        android:gravity="center_horizontal"
        android:text="DO NOT KNOW"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:backgroundTint="@android:color/transparent"
        app:backgroundTintMode="src_over"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editsavings" />

    <Button
        android:id="@+id/oinkoink"
        android:layout_width="100dp"
        android:layout_height="65dp"

        android:layout_marginStart="152dp"

        android:layout_marginTop="132dp"
        android:layout_marginEnd="153dp"
        android:layout_marginBottom="94dp"
        android:gravity="center_horizontal"
        app:backgroundTint="@android:color/transparent"
        app:backgroundTintMode="src_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/donotknowinformationsurveyresult"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
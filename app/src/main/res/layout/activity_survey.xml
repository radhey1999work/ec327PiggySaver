<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_background_survey"
    tools:context=".Survey">

   <pl.droidsonroids.gif.GifImageView
       android:id="@+id/gifmoneybank"
       android:layout_width="wrap_content"
       android:layout_height="250dp"
       android:layout_marginBottom="207dp"
       android:src="@drawable/moneybank"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.0"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.0" />

   <TextView
       android:id="@+id/textsurvey"
       android:layout_width="390dp"
       android:layout_height="350dp"
       android:layout_marginEnd="3dp"
       android:layout_marginBottom="207dp"
       android:lineSpacingExtra="5dp"
       android:text="This looks like your first time using Wallet Saver!\n In order to fully utilize this app, we need you to take\n a simple survey before starting."
       android:textAlignment="center"
       android:textColor="@color/black"
       android:textSize="25sp"
       android:textStyle="bold"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/gifmoneybank" />

   <Button
       android:id="@+id/buttonsurvey"
       android:layout_width="300dp"
       android:layout_height="65dp"
       android:layout_marginTop="63dp"
       android:layout_marginBottom="79dp"
       android:background="@drawable/bgbtngreen"
       android:gravity="center_horizontal"

       android:text="Start Survey"
       android:textAlignment="center"
       android:textSize="25sp"
       app:backgroundTint="#FF4D9A"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.5"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/textsurvey" />


</androidx.constraintlayout.widget.ConstraintLayout>
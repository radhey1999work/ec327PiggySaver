<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".surveyresultanalysis"
    android:background="@drawable/back">

    <com.example.ec327.TypeWriter
        android:id="@+id/submitresultanalysistext"
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="332dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/keepit"
        android:layout_width="300dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="46dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/bgbtngreen"
        android:gravity="center_horizontal"
        android:text="Keep it"
        android:textAlignment="center"
        android:textSize="24sp"
        app:backgroundTint="@color/teal_700"
        app:layout_constraintBottom_toTopOf="@+id/changeit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/submitresultanalysistext" />

    <Button
        android:id="@+id/changeit"
        android:layout_width="300dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="46dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="158dp"
        android:background="@drawable/bgbtngreen"
        android:gravity="center_horizontal"
        android:text="Change it"
        android:textAlignment="center"
        android:textSize="24sp"
        app:backgroundTint="@color/teal_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/keepit" />

    <EditText
        android:id="@+id/percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="146dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="146dp"
        android:layout_marginBottom="101dp"
        android:hint="Percentage"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changeit" />

    <Button
        android:id="@+id/submitpercentage"
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="121dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="122dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/bgbtngreen"
        android:gravity="center_horizontal"
        android:text="Submit"
        android:textAlignment="center"
        android:textSize="18sp"
        app:backgroundTint="@color/teal_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/percentage" />


</androidx.constraintlayout.widget.ConstraintLayout>